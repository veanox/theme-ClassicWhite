<fieldset id="password-credentials">
  <div class="login-form-row">
    <%= f.text_field :first_name, :class => 'global-input', :placeholder => Spree.t(:first_name) %>
  </div>

  <div class="login-form-row">
    <%= f.text_field :last_name, :class => 'global-input', :placeholder => Spree.t(:last_name) %>
  </div>
  
  <div class="login-form-row">
    <%= f.email_field :email, :class => 'global-input', :placeholder => Spree.t(:email) %>
  </div>
  <div class="login-form-row">
    <%= f.password_field :password, :class => 'global-input', :placeholder => Spree.t(:password) %>
  </div> 
  <div class="login-form-row">
    <%= f.password_field :password_confirmation, :class => 'global-input', :placeholder => Spree.t(:confirm_password) %>
  </div> 
</fieldset>
<div data-hook="signup_below_password_fields"></div>
